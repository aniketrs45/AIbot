{
  "manifest_version": 3,
  "name": "Ani AI Sidebar",
  "description": "React + Tailwind sidebar UI with content script and mock API.",
  "version": "0.1.0",
  "action": {
    "default_title": "Ani AI Sidebar"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/contentScript.js"]
    }
  ],
  "permissions": ["tabs"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["dist/sidebar.html", "dist/assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
